    <UseWindowsForms>true</UseWindowsForms>
    <ImplicitUsings>enable</ImplicitUsings>
    <ApplicationIcon>kutuphaneprojesi.ico</ApplicationIcon>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="kutuphaneprojesi.ico" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="DotNetEnv" Version="3.1.1" />
